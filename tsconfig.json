{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist",
      "target": "es6",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "lib": ["es2016", "dom", "es6"],
      "sourceMap": true,
      "downlevelIteration": true,
      "typeRoots" : ["./typings/", "./node_modules/@types/"],
      "paths": {
        "*": [ "./typings/*" ]
      }
    },
    "include": [
      "./src/**/*"
    ]
  }